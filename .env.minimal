# Configuration minimale pour SkinBaron Alerts (sans API key)

# === PORTS ===
BACKEND_PORT=3001
FRONTEND_PORT=3002

# === CONFIGURATION BACKEND ===
NODE_ENV=production
PORT=8080

# === SKINBARON API (OPTIONNEL) ===
# SB_API_KEY=

# === DISCORD WEBHOOK (OPTIONNEL) ===
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/votre-webhook

# === DATABASE ===
SQLITE_PATH=/app/data/alerts.db

# === SCHEDULER ===
POLL_CRON=*/5 * * * *
ENABLE_BEST_DEALS=false
ENABLE_NEWEST_ITEMS=false

# === FILTRES ===
FEEDS_MAX_PRICE=200
FEEDS_MAX_WEAR=0.20

# === API CONFIGURATION ===
CORS_ORIGIN=*
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# === LOGS ===
LOG_LEVEL=info

# === FRONTEND ===
NEXT_PUBLIC_API_URL=http://localhost:3001